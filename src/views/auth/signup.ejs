<%- include ("../partials/header") %>
<h1>Sign Up</h1>

<div class="error-box">
    <% if (errors) { errors.forEach((error) => { %>
        <p> <%= error %> </p>
    <% })} %>
</div>

<form action="/signup" method="post">
    <label for="email">Email: </label>
    <input id="email" type="text" name="email" value="<% if (params) params.email %>">
    <label for="firstName">First Name: </label>
    <input id="firstName" type="text" name="firstName" value="<% if (params) params.firstName %>">
    <label for="lastName">Last name: </label>
    <input id="lastName" type="text" name="lastName" value="<% if (params) params.lastName%>">
    <label for="mobileNumber">Mobile Number: </label>
    <input id="mobileNumber" type="text" name="mobileNumber" value="<% if (params) params.mobileNumber%>">
    <label for="password">Password: </label>
    <input id="password" type="password" name="password">
    <br>
    <input type="submit" id="submit">
</form>

<!-- temp -->
<style>
    form {
        display: flex;
        flex-direction: column;
    }

    input {
        width: 40%;
        height: 30px;
    }

    #submit {
        height: 30px;
        border: 1px solid green;
    }

    .error-box {
        background-color: rgb(230, 140, 140);
    }
</style>
